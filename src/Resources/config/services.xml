<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <imports>
        <import resource="snippets.xml" />
        <import resource="crontab.xml" />
        <import resource="commands.xml" />
    </imports>
    <services>
        <service id="Mularski\ProductAlert\ProductAlert\ProductAlertEntityDefinition">
            <tag name="shopware.entity.definition" entity="product_alert" />
        </service>
        <service id="Mularski\ProductAlert\Service\SalesChannel\ProductAlertPersistor" public="true">
            <argument type="service" id="product_alert.repository" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="Mularski\ProductAlert\Service\SalesChannel\Validation\ProductAlertValidator" />
        </service>
        <service id="Mularski\ProductAlert\Controller\ProductAlert" public="true">
            <argument id="Mularski\ProductAlert\Service\SalesChannel\ProductAlertPersistor" type="service" />
            <argument type="service" id="logger"/>
        </service>
        <service id="Mularski\ProductAlert\Service\SalesChannel\Validation\ProductAlertValidator" public="true">
            <argument type="service" id="Shopware\Core\Framework\Validation\DataValidator" />
            <argument type="service" id="product_alert.repository" />
        </service>
        <service id="Mularski\ProductAlert\Service\MailTemplate\MailSender" public="true">
            <argument type="service" id="Shopware\Core\Content\MailTemplate\Service\MailService" />
            <argument type="service" id="mail_template.repository" />
        </service>
        <service id="Mularski\ProductAlert\Service\ProductAlertService" public="true">
            <argument type="service" id="Mularski\ProductAlert\Service\MailTemplate\MailSender" />
            <argument type="service" id="product_alert.repository" />
        </service>
    </services>
</container>